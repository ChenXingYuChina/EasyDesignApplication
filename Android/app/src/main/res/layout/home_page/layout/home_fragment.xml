<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/home_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#578DE7"
        app:srcCompat="@drawable/taitou" />

    <cn.edu.hebut.easydesign.Activity.PassageList.PassageListView
        android:id="@+id/hot_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="60dp"
        app:card="@layout/image_main_card"
        app:head="@layout/home_head_frame"
        app:layout_manager="Linear" />
</LinearLayout>


