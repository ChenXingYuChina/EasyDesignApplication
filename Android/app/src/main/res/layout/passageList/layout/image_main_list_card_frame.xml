<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10sp"
    app:cardCornerRadius="3sp"
    app:cardElevation="3sp">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@id/list_image"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:padding="10sp"
            app:srcCompat="@drawable/logo" />

        <TextView
            android:id="@id/passage_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="10sp"
            android:text="title"
            android:textSize="24sp"
            android:textStyle="bold" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@id/like_label"
                android:layout_width="30sp"
                android:layout_height="30sp"
                android:layout_alignBaseline="@id/comment_label"
                android:layout_alignParentLeft="true"
                android:padding="3sp"
                app:srcCompat="@drawable/ic_like" />

            <TextView
                android:id="@id/like_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/like_label"
                android:text="10" />

            <ImageView
                android:id="@id/comment_label"
                android:layout_width="30sp"
                android:layout_height="30dp"
                android:layout_toLeftOf="@id/comment_number"
                android:padding="3sp"
                app:srcCompat="@drawable/ic_message_2" />

            <TextView
                android:id="@id/comment_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:text="10" />
        </RelativeLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>