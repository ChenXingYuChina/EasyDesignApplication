<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/home_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="-5sp"
            android:paddingBottom="-5sp"
            app:srcCompat="@drawable/taitou" />

        <fragment
            android:name="cn.edu.hebut.easydesign.Activity.Fragment.HomeFragment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/main_content"
            tools:layout="@layout/home_fragment" />
    </LinearLayout>

    <RadioGroup
        android:id="@+id/rg_main"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:alpha="1"
        android:background="#FFFFFF"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/zhuye"
            style="@style/rb_style"
            android:layout_height="50dp"
            android:alpha="1"
            android:drawableTop="@drawable/shouye"
            android:text="@string/home" />

        <RadioButton
            android:id="@+id/idea"
            style="@style/rb_style"
            android:layout_height="50dp"
            android:drawableTop="@drawable/idea"
            android:text="@string/idea" />

        <RadioButton
            android:id="@+id/fabu"
            style="@style/rb_style_publish"
            android:layout_height="60dp"
            android:drawableTop="@drawable/wenzhang"
            android:text="@string/publish" />

        <RadioButton
            android:id="@+id/anli"
            style="@style/rb_style"
            android:layout_height="50dp"
            android:drawableTop="@drawable/anli"
            android:text="@string/project" />

        <RadioButton
            android:id="@+id/geren"
            style="@style/rb_style"
            android:layout_height="50dp"
            android:drawableTop="@drawable/person"
            android:text="@string/person" />


    </RadioGroup>

</RelativeLayout>