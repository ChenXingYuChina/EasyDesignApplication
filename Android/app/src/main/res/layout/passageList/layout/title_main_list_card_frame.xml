<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="110dp"
    android:layout_margin="5sp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@id/list_image"
            android:layout_width="110dp"
            android:layout_height="110dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="5sp"
            android:layout_marginEnd="5dp"
            android:padding="5sp"
            app:srcCompat="@mipmap/ic_launcher" />

        <TextView
            android:id="@id/passage_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/list_image"
            android:padding="5sp"
            android:text="title"
            android:textSize="30sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@id/user_head"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="5sp"
            android:layout_toRightOf="@id/list_image"
            android:padding="5sp"
            android:translationY="-5dp"
            tools:srcCompat="@mipmap/ic_launcher" />

        <TextView
            android:id="@id/user_name"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:layout_alignTop="@id/user_head"
            android:layout_alignBottom="@id/user_head"
            android:layout_marginLeft="0dp"
            android:layout_marginTop="0dp"
            android:layout_marginBottom="0dp"
            android:layout_toRightOf="@id/user_head"
            android:gravity="center"
            android:text="user_name"
            android:textSize="8sp" />

        <TextView
            android:id="@id/comment_number"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/user_head"
            android:layout_alignBottom="@id/user_head"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="5dp"
            android:gravity="center"
            android:text="10"
            android:textSize="10dp"
            android:translationY="-5dp" />

        <ImageView
            android:id="@+id/like_label"
            android:layout_width="12dp"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/comment_number"
            android:layout_alignBottom="@id/user_head"
            android:layout_toLeftOf="@id/like_number"
            android:padding="1sp"
            app:srcCompat="@drawable/ic_like_2" />

        <TextView
            android:id="@id/like_number"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/user_head"
            android:layout_alignBottom="@id/user_head"
            android:layout_toLeftOf="@id/comment_label"
            android:gravity="center"
            android:text="10"
            android:textSize="10dp" />

        <ImageView
            android:id="@id/comment_label"
            android:layout_width="10dp"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/comment_number"
            android:layout_alignBottom="@id/user_head"
            android:layout_marginTop="0dp"
            android:layout_marginBottom="0dp"
            android:layout_toLeftOf="@id/comment_number"
            app:srcCompat="@drawable/ic_message_1" />
    </RelativeLayout>
</androidx.cardview.widget.CardView>