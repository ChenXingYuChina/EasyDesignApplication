<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="ImageWithTextView">
        <attr name="image" format="reference" />
        <attr name="text" format="string" />
    </declare-styleable>
    <declare-styleable name="PassageListContainer">
        <attr name="layout_manager" format="enum">
            <enum name="Linear" value="0" />
            <enum name="Grid" value="1" />
        </attr>
        <attr name="card" format="reference" /> <!-- need a layout -->
        <attr name="head" format="reference" /> <!-- need a layout -->
        <attr name="text_foot_onError" format="string" />
        <attr name="text_foot_onNoNew" format="string" />
        <attr name="text_foot_onLoading" format="string" />
        <attr name="text_foot_toLoad" format="string" />
        <attr name="text_refresh_onError" format="string" />
        <attr name="text_refresh_onNoNew" format="string" />
    </declare-styleable>

    <declare-styleable name="PassageMultiListView">
        <attr name="top" format="reference" />
    </declare-styleable>

    <declare-styleable name="ExampleCategoryButton">
        <attr name="buttonText" format="string" />
    </declare-styleable>

    <declare-styleable name="HalfAboveDialog">
        <!-- 优先度高 -->
        <attr name="dialog_height_percent" format="float" />
        <!--优先度低-->
        <attr name="dialog_height_dp" format="integer" />
        <attr name="auto_gone" format="boolean" />
    </declare-styleable>
</resources>